@{
    ViewBag.Title = "YerbaSoft Juegos";
    Layout = "~/Views/Shared/_Base.cshtml";
}

<h2>Main</h2>

@foreach(var g in ViewBag.Games)
{ 
<div class="row">
    <div class="col-md-4">
        <h2>@g.Nombre</h2>
        <p>@Html.Raw(g.Descripcion)</p>
        <p><a class="btn btn-default" href="~/Game/@g.Codigo">Jugar &raquo;</a></p>
    </div>
</div>
}